<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="fruit" class="com.example.demo.Fruit"/>
	<bean id="fruitWithName" class="com.example.demo.Fruit">
		<constructor-arg index="0" value="Apple"></constructor-arg>
	</bean>
	<bean id="vegetable" class="com.example.demo.Vegetable"/>
	
	<bean id="vegWithName" class="com.example.demo.Vegetable">
		<property name="myName" value="Brocolli"></property>
	</bean>

</beans>
